# Ikabud Kernel Configuration
# GNU/Linux-inspired CMS Operating System
# Copy this file to .env and update with your settings

# ============================================================================
# APPLICATION
# ============================================================================
APP_NAME="Ikabud Kernel"
APP_ENV=production
APP_DEBUG=false
APP_URL=http://localhost

# ============================================================================
# DATABASE CONFIGURATION (Required)
# ============================================================================
# MySQL/MariaDB connection settings
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=
DB_DATABASE=ikabud_kernel
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# ============================================================================
# KERNEL CONFIGURATION
# ============================================================================
KERNEL_VERSION=3.0.0
KERNEL_BOOT_MODE=production
KERNEL_MAX_PROCESSES=100
KERNEL_DEFAULT_MEMORY_LIMIT=256
KERNEL_SYSCALL_LOGGING=false
KERNEL_DEBUG_MODE=false

# ============================================================================
# DSL CONFIGURATION
# ============================================================================
DSL_CACHE_ENABLED=true
DSL_CACHE_TTL=3600
DSL_DEBUG_MODE=false

# ============================================================================
# ROUTING CONFIGURATION
# ============================================================================
ROUTING_DEFAULT_CMS=native

# ============================================================================
# JWT AUTHENTICATION (Required)
# ============================================================================
# Generate a secure random string for JWT_SECRET
# Example: openssl rand -base64 32
JWT_SECRET=your-secret-key-change-this-in-production-use-openssl-rand-base64-32
JWT_ALGORITHM=HS256
JWT_EXPIRATION=86400

# ============================================================================
# CORS CONFIGURATION
# ============================================================================
CORS_ORIGIN=http://localhost:5173,http://localhost
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization,X-Requested-With

# ============================================================================
# FILE UPLOAD CONFIGURATION
# ============================================================================
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif,webp,pdf,doc,docx,zip

# ============================================================================
# CACHE CONFIGURATION
# ============================================================================
# Cache driver: file, redis, memcached
CACHE_DRIVER=file
CACHE_PREFIX=ikabud_kernel_
CACHE_PATH=storage/cache

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
LOG_LEVEL=info
LOG_CHANNEL=daily
LOG_PATH=storage/logs

# ============================================================================
# INSTANCE CONFIGURATION
# ============================================================================
INSTANCES_PATH=instances
SHARED_CORES_PATH=shared-cores

# ============================================================================
# THEME CONFIGURATION
# ============================================================================
THEMES_PATH=themes
THEME_CACHE_ENABLED=true

# ============================================================================
# PERFORMANCE CONFIGURATION
# ============================================================================
PERFORMANCE_TRACKING=false
RESOURCE_MONITORING=true
BOOT_PROFILING=false
