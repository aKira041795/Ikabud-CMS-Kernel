# Ikabud Kernel Environment Configuration
# Copy this file to .env and update with your settings

# ============================================================================
# APPLICATION
# ============================================================================
APP_NAME="Ikabud Kernel"
APP_ENV=production
APP_DEBUG=false
APP_URL=http://localhost

# ============================================================================
# JWT AUTHENTICATION (Required)
# ============================================================================
# Generate a secure random string for JWT_SECRET
# Example: openssl rand -base64 32
JWT_SECRET=your-secret-key-change-this-in-production-use-openssl-rand-base64-32
JWT_ALGORITHM=HS256
JWT_EXPIRATION=86400

# ============================================================================
# DATABASE (Required)
# ============================================================================
# MySQL/MariaDB connection settings
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=ikabud_kernel
DB_USERNAME=root
DB_PASSWORD=
DB_CHARSET=utf8mb4

# ============================================================================
# ADMIN CREDENTIALS (Initial Setup)
# ============================================================================
# Default admin user for first login
# Change these immediately after first login!
ADMIN_USERNAME=admin
ADMIN_PASSWORD=password
ADMIN_EMAIL=admin@ikabud.local

# ============================================================================
# CACHE CONFIGURATION
# ============================================================================
# Cache driver: file, redis, memcached
CACHE_DRIVER=file
CACHE_TTL=3600
CACHE_PATH=./var/cache

# ============================================================================
# PATHS (Auto-configured, change only if needed)
# ============================================================================
INSTANCES_PATH=./instances
SHARED_CORES_PATH=./shared-cores
THEMES_PATH=./themes
LOGS_PATH=./logs

# ============================================================================
# SECURITY
# ============================================================================
SESSION_LIFETIME=120
CORS_ALLOWED_ORIGINS=*
ALLOWED_HOSTS=*

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=info
LOG_CHANNEL=file

# ============================================================================
# PERFORMANCE
# ============================================================================
MAX_INSTANCES=100
MEMORY_LIMIT=512M
MAX_EXECUTION_TIME=300

# ============================================================================
# CONDITIONAL LOADING
# ============================================================================
# Enable CMS-agnostic conditional extension loading
CONDITIONAL_LOADING_ENABLED=true
CONDITIONAL_LOADING_CACHE=true

# ============================================================================
# DEVELOPMENT (Set to false in production)
# ============================================================================
DEV_MODE=false
SHOW_ERRORS=false
DEBUG_QUERIES=false
