{
  "comments": {
    "blockComment": ["{!--", "--}"]
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["<", ">"]
  ],
  "autoClosingPairs": [
    { "open": "{", "close": "}", "notIn": ["string", "comment"] },
    { "open": "[", "close": "]", "notIn": ["string", "comment"] },
    { "open": "(", "close": ")", "notIn": ["string", "comment"] },
    { "open": "\"", "close": "\"", "notIn": ["string"] },
    { "open": "'", "close": "'", "notIn": ["string"] },
    { "open": "<", "close": ">", "notIn": ["string", "comment"] },
    { "open": "{!--", "close": "--}" }
  ],
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"],
    ["<", ">"]
  ],
  "folding": {
    "markers": {
      "start": "^\\s*\\{(ikb_[a-z_][a-z0-9_]*|if|for|switch)(?!.*/).*\\}",
      "end": "^\\s*\\{/(ikb_[a-z_][a-z0-9_]*|if|for|switch)\\}"
    }
  },
  "wordPattern": "(-?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\/\\?\\s]+)",
  "indentationRules": {
    "increaseIndentPattern": "^\\s*\\{(ikb_[a-z_][a-z0-9_]*|if|for|switch)(?!.*/).*\\}\\s*$",
    "decreaseIndentPattern": "^\\s*\\{/(ikb_[a-z_][a-z0-9_]*|if|for|switch)\\}\\s*$"
  },
  "onEnterRules": [
    {
      "beforeText": "^\\s*\\{(ikb_[a-z_][a-z0-9_]*|if|for|switch)(?!.*/).*\\}\\s*$",
      "action": {
        "indent": "indent"
      }
    },
    {
      "beforeText": "^\\s*\\{/(ikb_[a-z_][a-z0-9_]*|if|for|switch)\\}\\s*$",
      "action": {
        "indent": "outdent"
      }
    },
    {
      "beforeText": "^\\s*\\{else\\}\\s*$",
      "action": {
        "indent": "none"
      }
    },
    {
      "beforeText": "^\\s*\\{elseif\\s.*\\}\\s*$",
      "action": {
        "indent": "none"
      }
    },
    {
      "beforeText": "^\\s*\\{case\\s.*\\}\\s*$",
      "action": {
        "indent": "indent"
      }
    },
    {
      "beforeText": "^\\s*\\{default\\}\\s*$",
      "action": {
        "indent": "indent"
      }
    }
  ]
}
