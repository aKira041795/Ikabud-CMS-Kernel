        {ikb_text size="2xl" weight="bold" align="center" color="#fff"}
            Welcome to Brutus Blog
        {/ikb_text}
        {ikb_text size="lg" align="center" color="#f0f0f0"}
            Exploring technology, design, and innovation
        {/ikb_text}
        {ikb_text size="md" align="center" color="#e0e0e0"}
            Powered by DiSyL Declarative Templates
        {/ikb_text}
    {/ikb_container}
{/ikb_section}

{!-- Latest Posts Section --}
{ikb_section type="content" padding="large"}
    {ikb_container width="lg"}
        {ikb_text size="xl" weight="bold" align="center"}
            Latest Posts
        {/ikb_text}
        {ikb_text size="md" align="center" color="#666"}
            Discover our most recent articles
        {/ikb_text}
        
        {ikb_query type="post" limit=6 orderby="date" order="desc"}
            {ikb_block cols=3 gap=2}
                {ikb_card 
                    title="{item.title}"
                    image="{item.thumbnail}"
                    link="{item.url}"
                    variant="elevated"
                }
                    {ikb_text size="sm" color="#666"}
                        {item.date} â€¢ {item.author}
                    {/ikb_text}
                    {ikb_text size="sm"}
                        {item.excerpt}
                    {/ikb_text}
                    {if condition="item.categories"}
                        {ikb_text size="xs" color="#999"}
                            Categories: {item.categories}
                        {/ikb_text}
                    {/if}
                {/ikb_card}
            {/ikb_block}
        {/ikb_query}
    {/ikb_container}
{/ikb_section}

