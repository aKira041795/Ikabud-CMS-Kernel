{!-- Phoenix Theme - Homepage Template --}
{include file="components/header.disyl"}

{!-- Featured Slider Section --}
{ikb_section type="slider" class="section-gradient" padding="large"}
    {include file="components/slider.disyl"}
{/ikb_section}

{!-- Hero Section with Animated Gradient (Only show when no hero widget) --}
{if condition="!widgets.homepage_hero.active"}
{ikb_section type="hero" class="hero-section" padding="none"}
    <div class="hero-content animate-fade-in">
        {ikb_text size="4xl" weight="black" class="hero-title"}
            {theme.hero.title | esc_html}
        {/ikb_text}
        
        {ikb_text size="xl" class="hero-subtitle"}
            {theme.hero.subtitle | esc_html}
        {/ikb_text}
        
        <div class="hero-cta">
            <a href="#features" class="btn btn-primary">Explore Features</a>
            <a href="#blog" class="btn btn-outline">Read Blog</a>
        </div>
    </div>
{/ikb_section}
{/if}

{!-- Custom Hero Widget (When set) --}
{if condition="widgets.homepage_hero.active"}
    {widgets.homepage_hero.content | disyl}
{/if}

