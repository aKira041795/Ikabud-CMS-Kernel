{!-- Phoenix Theme v2 - Sidebar Component (Drupal-Native) --}

{!-- Render sidebar based on which regions have content --}
{if condition="has_sidebar_first"}
    <aside class="sidebar sidebar-first" role="complementary">
        {drupal_region name="sidebar_first" /}
    </aside>
{/if}

{if condition="has_sidebar_second"}
    <aside class="sidebar sidebar-second" role="complementary">
        {drupal_region name="sidebar_second" /}
    </aside>
{/if}
