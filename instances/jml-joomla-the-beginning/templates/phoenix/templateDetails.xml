<?xml version="1.0" encoding="UTF-8"?>
<extension type="template" client="site">
	<name>phoenix</name>
	<version>2.0.0</version>
	<creationDate>November 2025</creationDate>
	<author>Ikabud Team</author>
	<authorEmail>support@ikabud.com</authorEmail>
	<copyright>(C) 2025 Ikabud. All rights reserved.</copyright>
	<license>GPL-2.0-or-later</license>
	<description>TPL_PHOENIX_V2_XML_DESCRIPTION</description>
	<inheritable>1</inheritable>
	
	<files>
		<filename>index.php</filename>
		<filename>component.php</filename>
		<filename>error.php</filename>
		<filename>offline.php</filename>
		<filename>templateDetails.xml</filename>
		<filename>joomla.asset.json</filename>
		<folder>disyl</folder>
		<folder>includes</folder>
		<folder>assets</folder>
		<folder>language</folder>
	</files>
	
	<positions>
		<position>topbar</position>
		<position>header</position>
		<position>menu</position>
		<position>search</position>
		<position>banner</position>
		<position>hero</position>
		<position>features</position>
		<position>top-a</position>
		<position>top-b</position>
		<position>main-top</position>
		<position>main-bottom</position>
		<position>breadcrumbs</position>
		<position>sidebar-left</position>
		<position>sidebar-right</position>
		<position>bottom-a</position>
		<position>bottom-b</position>
		<position>footer-1</position>
		<position>footer-2</position>
		<position>footer-3</position>
		<position>footer-4</position>
		<position>footer</position>
		<position>debug</position>
	</positions>
	
	<languages folder="language">
		<language tag="en-GB">en-GB/tpl_phoenix.ini</language>
		<language tag="en-GB">en-GB/tpl_phoenix.sys.ini</language>
	</languages>
	
	<config>
		<fields name="params">
			<fieldset name="advanced">
				<!-- Logo Settings -->
				<field
					name="logoFile"
					type="media"
					schemes="http,https,ftp,ftps,data,file"
					validate="url"
					relative="true"
					default=""
					label="TPL_PHOENIX_LOGO_LABEL"
					description="TPL_PHOENIX_LOGO_DESC"
				/>
				
				<field
					name="siteTitle"
					type="text"
					default=""
					label="TPL_PHOENIX_TITLE_LABEL"
					description="TPL_PHOENIX_TITLE_DESC"
					filter="string"
				/>
				
				<field
					name="siteDescription"
					type="text"
					default=""
					label="TPL_PHOENIX_TAGLINE_LABEL"
					description="TPL_PHOENIX_TAGLINE_DESC"
					filter="string"
				/>
				
				<!-- Header Settings -->
				<field
					name="stickyHeader"
					type="radio"
					label="TPL_PHOENIX_STICKY_HEADER_LABEL"
					description="TPL_PHOENIX_STICKY_HEADER_DESC"
					layout="joomla.form.field.radio.switcher"
					default="1"
					filter="integer"
				>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				
				<field
					name="showSearch"
					type="radio"
					label="TPL_PHOENIX_SHOW_SEARCH_LABEL"
					description="TPL_PHOENIX_SHOW_SEARCH_DESC"
					layout="joomla.form.field.radio.switcher"
					default="1"
					filter="integer"
				>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				
				<!-- Footer Settings -->
				<field
					name="footerColumns"
					type="number"
					label="TPL_PHOENIX_FOOTER_COLUMNS_LABEL"
					description="TPL_PHOENIX_FOOTER_COLUMNS_DESC"
					default="4"
					min="1"
					max="6"
					filter="integer"
				/>
				
				<field
					name="showSocial"
					type="radio"
					label="TPL_PHOENIX_SHOW_SOCIAL_LABEL"
					description="TPL_PHOENIX_SHOW_SOCIAL_DESC"
					layout="joomla.form.field.radio.switcher"
					default="1"
					filter="integer"
				>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				
				<field
					name="copyrightText"
					type="textarea"
					label="TPL_PHOENIX_COPYRIGHT_LABEL"
					description="TPL_PHOENIX_COPYRIGHT_DESC"
					default="Â© 2025 All rights reserved."
					filter="raw"
					rows="3"
				/>
				
				<!-- Color Scheme -->
				<field
					name="colorScheme"
					type="list"
					label="TPL_PHOENIX_COLOR_SCHEME_LABEL"
					description="TPL_PHOENIX_COLOR_SCHEME_DESC"
					default="default"
					validate="options"
				>
					<option value="default">TPL_PHOENIX_COLOR_DEFAULT</option>
					<option value="blue">TPL_PHOENIX_COLOR_BLUE</option>
					<option value="purple">TPL_PHOENIX_COLOR_PURPLE</option>
					<option value="green">TPL_PHOENIX_COLOR_GREEN</option>
					<option value="orange">TPL_PHOENIX_COLOR_ORANGE</option>
				</field>
				
				<!-- Container Settings -->
				<field
					name="fluidContainer"
					type="radio"
					layout="joomla.form.field.radio.switcher"
					default="0"
					label="TPL_PHOENIX_FLUID_LABEL"
					description="TPL_PHOENIX_FLUID_DESC"
				>
					<option value="0">TPL_PHOENIX_STATIC</option>
					<option value="1">TPL_PHOENIX_FLUID</option>
				</field>
				
				<!-- Back to Top -->
				<field
					name="backTop"
					type="radio"
					label="TPL_PHOENIX_BACKTOTOP_LABEL"
					description="TPL_PHOENIX_BACKTOTOP_DESC"
					layout="joomla.form.field.radio.switcher"
					default="1"
					filter="integer"
				>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
			</fieldset>
			
			<fieldset name="slider" label="TPL_PHOENIX_SLIDER_SETTINGS">
				<!-- Slider Settings -->
				<field
					name="sliderAutoplay"
					type="radio"
					label="TPL_PHOENIX_SLIDER_AUTOPLAY_LABEL"
					description="TPL_PHOENIX_SLIDER_AUTOPLAY_DESC"
					layout="joomla.form.field.radio.switcher"
					default="1"
					filter="integer"
				>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				
				<field
					name="sliderInterval"
					type="number"
					label="TPL_PHOENIX_SLIDER_INTERVAL_LABEL"
					description="TPL_PHOENIX_SLIDER_INTERVAL_DESC"
					default="5000"
					min="1000"
					max="30000"
					step="1000"
					filter="integer"
				/>
				
				<field
					name="sliderTransition"
					type="list"
					label="TPL_PHOENIX_SLIDER_TRANSITION_LABEL"
					description="TPL_PHOENIX_SLIDER_TRANSITION_DESC"
					default="fade"
					validate="options"
				>
					<option value="fade">TPL_PHOENIX_SLIDER_FADE</option>
					<option value="slide">TPL_PHOENIX_SLIDER_SLIDE</option>
					<option value="zoom">TPL_PHOENIX_SLIDER_ZOOM</option>
				</field>
				
				<field
					name="sliderShowArrows"
					type="radio"
					label="TPL_PHOENIX_SLIDER_ARROWS_LABEL"
					description="TPL_PHOENIX_SLIDER_ARROWS_DESC"
					layout="joomla.form.field.radio.switcher"
					default="1"
					filter="integer"
				>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				
				<field
					name="sliderShowDots"
					type="radio"
					label="TPL_PHOENIX_SLIDER_DOTS_LABEL"
					description="TPL_PHOENIX_SLIDER_DOTS_DESC"
					layout="joomla.form.field.radio.switcher"
					default="1"
					filter="integer"
				>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
			</fieldset>
			
			<fieldset name="layout" label="TPL_PHOENIX_LAYOUT_SETTINGS">
				<!-- Layout Settings -->
				<field
					name="layoutStyle"
					type="list"
					label="TPL_PHOENIX_LAYOUT_STYLE_LABEL"
					description="TPL_PHOENIX_LAYOUT_STYLE_DESC"
					default="boxed"
					validate="options"
				>
					<option value="boxed">TPL_PHOENIX_LAYOUT_BOXED</option>
					<option value="full">TPL_PHOENIX_LAYOUT_FULL</option>
					<option value="wide">TPL_PHOENIX_LAYOUT_WIDE</option>
				</field>
				
				<field
					name="moduleChrome"
					type="list"
					label="TPL_PHOENIX_MODULE_CHROME_LABEL"
					description="TPL_PHOENIX_MODULE_CHROME_DESC"
					default="card"
					validate="options"
				>
					<option value="none">TPL_PHOENIX_CHROME_NONE</option>
					<option value="card">TPL_PHOENIX_CHROME_CARD</option>
					<option value="well">TPL_PHOENIX_CHROME_WELL</option>
					<option value="xhtml">TPL_PHOENIX_CHROME_XHTML</option>
				</field>
			</fieldset>
			
			<fieldset name="sidebar" label="TPL_PHOENIX_SIDEBAR_SETTINGS">
				<!-- Sidebar About Widget -->
				<field
					name="sidebarAboutTitle"
					type="text"
					default="About Phoenix"
					label="TPL_PHOENIX_SIDEBAR_ABOUT_TITLE"
					description="Title for the sidebar about widget"
					filter="string"
				/>
				
				<field
					name="sidebarAboutContent"
					type="textarea"
					default="A modern, DiSyL-powered Joomla template with clean design and powerful features."
					label="TPL_PHOENIX_SIDEBAR_ABOUT_CONTENT"
					description="Content for the sidebar about widget"
					rows="5"
					cols="40"
					filter="raw"
				/>
			</fieldset>
		</fields>
	</config>
</extension>
