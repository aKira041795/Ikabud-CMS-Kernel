{
  "$schema": "../schemas/functions.schema.json",
  "version": "0.2.0",
  "type": "functions",
  "cms": "wordpress",
  "description": "WordPress template functions available in DiSyL context",
  
  "template_functions": {
    "get_header": {
      "description": "Get WordPress header template",
      "signature": "get_header(string $name = null): void",
      "usage": "{! get_header() !}",
      "category": "template_parts",
      "ikabud_translation": "TemplateService::getHeader"
    },
    "get_footer": {
      "description": "Get WordPress footer template",
      "signature": "get_footer(string $name = null): void",
      "usage": "{! get_footer() !}",
      "category": "template_parts",
      "ikabud_translation": "TemplateService::getFooter"
    },
    "get_sidebar": {
      "description": "Get WordPress sidebar template",
      "signature": "get_sidebar(string $name = null): void",
      "usage": "{! get_sidebar() !}",
      "category": "template_parts",
      "ikabud_translation": "TemplateService::getSidebar"
    },
    "get_template_part": {
      "description": "Load a template part",
      "signature": "get_template_part(string $slug, string $name = null, array $args = []): void",
      "usage": "{! get_template_part('content', 'page') !}",
      "category": "template_parts",
      "ikabud_translation": "TemplateService::getTemplatePart"
    }
  },
  
  "url_functions": {
    "home_url": {
      "description": "Get home URL",
      "signature": "home_url(string $path = '', string $scheme = null): string",
      "context_var": "site.home_url",
      "category": "url",
      "ikabud_translation": "PermalinkService::homeUrl"
    },
    "site_url": {
      "description": "Get site URL",
      "signature": "site_url(string $path = '', string $scheme = null): string",
      "context_var": "site.url",
      "category": "url",
      "ikabud_translation": "PermalinkService::siteUrl"
    },
    "admin_url": {
      "description": "Get admin URL",
      "signature": "admin_url(string $path = '', string $scheme = 'admin'): string",
      "context_var": "site.admin_url",
      "category": "url",
      "ikabud_translation": "PermalinkService::adminUrl"
    },
    "content_url": {
      "description": "Get content directory URL",
      "signature": "content_url(string $path = ''): string",
      "category": "url",
      "ikabud_translation": "PermalinkService::contentUrl"
    },
    "plugins_url": {
      "description": "Get plugins directory URL",
      "signature": "plugins_url(string $path = '', string $plugin = ''): string",
      "category": "url",
      "ikabud_translation": "PermalinkService::pluginsUrl"
    }
  },
  
  "option_functions": {
    "get_option": {
      "description": "Get option value",
      "signature": "get_option(string $option, mixed $default = false): mixed",
      "category": "options",
      "ikabud_translation": "SettingsService::get"
    },
    "update_option": {
      "description": "Update option value",
      "signature": "update_option(string $option, mixed $value, string $autoload = null): bool",
      "category": "options",
      "ikabud_translation": "SettingsService::update"
    },
    "delete_option": {
      "description": "Delete option",
      "signature": "delete_option(string $option): bool",
      "category": "options",
      "ikabud_translation": "SettingsService::delete"
    },
    "get_bloginfo": {
      "description": "Get blog information",
      "signature": "get_bloginfo(string $show = '', string $filter = 'raw'): string",
      "context_var": "site.info",
      "category": "options",
      "ikabud_translation": "SettingsService::getBlogInfo"
    }
  },
  
  "theme_functions": {
    "add_theme_support": {
      "description": "Add theme support for feature",
      "signature": "add_theme_support(string $feature, mixed ...$args): void|false",
      "category": "theme",
      "ikabud_translation": "ThemeService::addSupport"
    },
    "current_theme_supports": {
      "description": "Check if theme supports feature",
      "signature": "current_theme_supports(string $feature): bool",
      "category": "theme",
      "ikabud_translation": "ThemeService::supports"
    },
    "get_theme_mod": {
      "description": "Get theme modification value",
      "signature": "get_theme_mod(string $name, mixed $default = false): mixed",
      "category": "theme",
      "ikabud_translation": "CustomizerService::getMod"
    },
    "set_theme_mod": {
      "description": "Set theme modification value",
      "signature": "set_theme_mod(string $name, mixed $value): void",
      "category": "theme",
      "ikabud_translation": "CustomizerService::setMod"
    }
  },
  
  "menu_functions": {
    "wp_nav_menu": {
      "description": "Display navigation menu",
      "signature": "wp_nav_menu(array $args = []): void|string|false",
      "category": "navigation",
      "ikabud_translation": "MenuService::displayMenu"
    },
    "has_nav_menu": {
      "description": "Check if menu location has menu",
      "signature": "has_nav_menu(string $location): bool",
      "category": "navigation",
      "ikabud_translation": "MenuService::hasMenu"
    },
    "get_nav_menu_locations": {
      "description": "Get all menu locations",
      "signature": "get_nav_menu_locations(): array",
      "category": "navigation",
      "ikabud_translation": "MenuService::getLocations"
    }
  },
  
  "content_functions": {
    "the_title": {
      "description": "Display post title",
      "signature": "the_title(string $before = '', string $after = '', bool $display = true): string|void",
      "context_var": "item.title",
      "category": "content"
    },
    "the_content": {
      "description": "Display post content",
      "signature": "the_content(string $more_link_text = null): void",
      "context_var": "item.content",
      "category": "content"
    },
    "the_excerpt": {
      "description": "Display post excerpt",
      "signature": "the_excerpt(): void",
      "context_var": "item.excerpt",
      "category": "content"
    },
    "the_permalink": {
      "description": "Display post permalink",
      "signature": "the_permalink(): void",
      "context_var": "item.url",
      "category": "content"
    }
  },
  
  "meta_functions": {
    "get_post_meta": {
      "description": "Get post meta value",
      "signature": "get_post_meta(int $post_id, string $key = '', bool $single = false): mixed",
      "usage": "{item.meta.custom_field}",
      "category": "metadata"
    },
    "get_the_author": {
      "description": "Get post author name",
      "signature": "get_the_author(): string",
      "context_var": "item.author",
      "category": "metadata"
    },
    "get_the_date": {
      "description": "Get post date",
      "signature": "get_the_date(string $format = ''): string",
      "context_var": "item.date",
      "category": "metadata"
    }
  },
  
  "taxonomy_functions": {
    "get_the_category": {
      "description": "Get post categories",
      "signature": "get_the_category(int $post_id = null): array",
      "context_var": "item.categories",
      "category": "taxonomy"
    },
    "get_the_tags": {
      "description": "Get post tags",
      "signature": "get_the_tags(int $post_id = null): array|false",
      "context_var": "item.tags",
      "category": "taxonomy"
    }
  },
  
  "media_functions": {
    "get_the_post_thumbnail": {
      "description": "Get post featured image",
      "signature": "get_the_post_thumbnail(int $post_id = null, string|array $size = 'post-thumbnail', string|array $attr = ''): string",
      "context_var": "item.thumbnail",
      "category": "media"
    },
    "wp_get_attachment_image": {
      "description": "Get attachment image",
      "signature": "wp_get_attachment_image(int $attachment_id, string|array $size = 'thumbnail', bool $icon = false, string|array $attr = ''): string",
      "category": "media"
    }
  }
}
