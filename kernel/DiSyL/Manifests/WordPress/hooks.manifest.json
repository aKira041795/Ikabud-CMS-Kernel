{
  "$schema": "../schemas/hooks.schema.json",
  "version": "0.5.0",
  "type": "hooks",
  "cms": "wordpress",
  "description": "WordPress hooks, actions, and filters for DiSyL integration",
  
  "meta": {
    "author": "DiSyL WordPress Team",
    "license": "MIT",
    "homepage": "https://disyl.dev/wordpress/hooks",
    "cms_support": ["wordpress"],
    "tags": ["wordpress", "hooks", "actions", "filters"],
    "requires": {
      "wordpress": ">=6.0",
      "php": ">=8.0"
    }
  },
  
  "wordpress_core_actions": {
    "init": {
      "description": "Fires after WordPress has finished loading but before any headers are sent",
      "type": "action",
      "priority": 10,
      "accepted_args": 0,
      "use_case": "Register post types, taxonomies, scripts, styles",
      "example": "add_action('init', 'my_init_function');",
      "ikabud_translation": "HookService::addAction('init', ...)"
    },
    "wp_loaded": {
      "description": "Fires once WordPress init has finished",
      "type": "action",
      "priority": 10,
      "accepted_args": 0,
      "use_case": "Access to all WordPress functions",
      "example": "add_action('wp_loaded', 'my_loaded_function');"
    },
    "wp_enqueue_scripts": {
      "description": "Enqueue scripts and styles for front-end",
      "type": "action",
      "priority": 10,
      "accepted_args": 0,
      "use_case": "Load CSS/JS files",
      "example": "add_action('wp_enqueue_scripts', 'my_enqueue_function');"
    },
    "admin_enqueue_scripts": {
      "description": "Enqueue scripts and styles for admin",
      "type": "action",
      "priority": 10,
      "accepted_args": 1,
      "use_case": "Load admin CSS/JS",
      "example": "add_action('admin_enqueue_scripts', 'my_admin_enqueue');"
    },
    "wp_head": {
      "description": "Fires in the <head> section",
      "type": "action",
      "priority": 10,
      "accepted_args": 0,
      "use_case": "Add meta tags, analytics",
      "example": "add_action('wp_head', 'my_head_function');"
    },
    "wp_footer": {
      "description": "Fires before closing </body>",
      "type": "action",
      "priority": 10,
      "accepted_args": 0,
      "use_case": "Add tracking scripts",
      "example": "add_action('wp_footer', 'my_footer_function');"
    },
    "save_post": {
      "description": "Fires when a post is saved",
      "type": "action",
      "priority": 10,
      "accepted_args": 3,
      "params": ["post_id", "post", "update"],
      "use_case": "Save custom meta, trigger actions",
      "example": "add_action('save_post', 'my_save_function', 10, 3);"
    },
    "publish_post": {
      "description": "Fires when a post is published",
      "type": "action",
      "priority": 10,
      "accepted_args": 2,
      "params": ["post_id", "post"],
      "use_case": "Send notifications, update cache",
      "example": "add_action('publish_post', 'my_publish_function', 10, 2);"
    },
    "wp_trash_post": {
      "description": "Fires before a post is trashed",
      "type": "action",
      "priority": 10,
      "accepted_args": 1,
      "params": ["post_id"],
      "use_case": "Cleanup related data",
      "example": "add_action('wp_trash_post', 'my_trash_function');"
    },
    "delete_post": {
      "description": "Fires before a post is deleted",
      "type": "action",
      "priority": 10,
      "accepted_args": 2,
      "params": ["post_id", "post"],
      "use_case": "Cleanup attachments, meta",
      "example": "add_action('delete_post', 'my_delete_function', 10, 2);"
    },
    "wp_login": {
      "description": "Fires after user login",
      "type": "action",
      "priority": 10,
      "accepted_args": 2,
      "params": ["user_login", "user"],
      "use_case": "Track logins, redirect",
      "example": "add_action('wp_login', 'my_login_function', 10, 2);"
    },
    "wp_logout": {
      "description": "Fires before user logout",
      "type": "action",
      "priority": 10,
      "accepted_args": 1,
      "params": ["user_id"],
      "use_case": "Cleanup sessions",
      "example": "add_action('wp_logout', 'my_logout_function');"
    },
    "user_register": {
      "description": "Fires after new user registration",
      "type": "action",
      "priority": 10,
      "accepted_args": 1,
      "params": ["user_id"],
      "use_case": "Send welcome email, setup defaults",
      "example": "add_action('user_register', 'my_register_function');"
    },
    "profile_update": {
      "description": "Fires after user profile update",
      "type": "action",
      "priority": 10,
      "accepted_args": 2,
      "params": ["user_id", "old_user_data"],
      "use_case": "Track profile changes",
      "example": "add_action('profile_update', 'my_profile_function', 10, 2);"
    },
    "comment_post": {
      "description": "Fires after comment is posted",
      "type": "action",
      "priority": 10,
      "accepted_args": 3,
      "params": ["comment_id", "comment_approved", "commentdata"],
      "use_case": "Send notifications",
      "example": "add_action('comment_post', 'my_comment_function', 10, 3);"
    }
  },
  
  "wordpress_core_filters": {
    "the_content": {
      "description": "Filter post content before display",
      "type": "filter",
      "priority": 10,
      "accepted_args": 1,
      "params": ["content"],
      "use_case": "Modify content, add shortcodes",
      "example": "add_filter('the_content', 'my_content_filter');",
      "ikabud_translation": "HookService::addFilter('the_content', ...)"
    },
    "the_title": {
      "description": "Filter post title",
      "type": "filter",
      "priority": 10,
      "accepted_args": 2,
      "params": ["title", "post_id"],
      "use_case": "Modify titles",
      "example": "add_filter('the_title', 'my_title_filter', 10, 2);"
    },
    "the_excerpt": {
      "description": "Filter post excerpt",
      "type": "filter",
      "priority": 10,
      "accepted_args": 1,
      "params": ["excerpt"],
      "use_case": "Customize excerpts",
      "example": "add_filter('the_excerpt', 'my_excerpt_filter');"
    },
    "excerpt_length": {
      "description": "Filter excerpt word count",
      "type": "filter",
      "priority": 10,
      "accepted_args": 1,
      "params": ["length"],
      "use_case": "Change excerpt length",
      "example": "add_filter('excerpt_length', function() { return 20; });"
    },
    "excerpt_more": {
      "description": "Filter excerpt 'more' text",
      "type": "filter",
      "priority": 10,
      "accepted_args": 1,
      "params": ["more"],
      "use_case": "Customize [...] text",
      "example": "add_filter('excerpt_more', function() { return '...'; });"
    },
    "body_class": {
      "description": "Filter body CSS classes",
      "type": "filter",
      "priority": 10,
      "accepted_args": 2,
      "params": ["classes", "class"],
      "use_case": "Add custom body classes",
      "example": "add_filter('body_class', 'my_body_class');"
    },
    "post_class": {
      "description": "Filter post CSS classes",
      "type": "filter",
      "priority": 10,
      "accepted_args": 3,
      "params": ["classes", "class", "post_id"],
      "use_case": "Add custom post classes",
      "example": "add_filter('post_class', 'my_post_class', 10, 3);"
    },
    "wp_nav_menu_items": {
      "description": "Filter navigation menu items",
      "type": "filter",
      "priority": 10,
      "accepted_args": 2,
      "params": ["items", "args"],
      "use_case": "Add/remove menu items",
      "example": "add_filter('wp_nav_menu_items', 'my_menu_filter', 10, 2);"
    },
    "widget_title": {
      "description": "Filter widget title",
      "type": "filter",
      "priority": 10,
      "accepted_args": 3,
      "params": ["title", "instance", "id_base"],
      "use_case": "Modify widget titles",
      "example": "add_filter('widget_title', 'my_widget_title', 10, 3);"
    },
    "pre_get_posts": {
      "description": "Modify WP_Query before execution",
      "type": "action",
      "priority": 10,
      "accepted_args": 1,
      "params": ["query"],
      "use_case": "Modify query parameters",
      "example": "add_action('pre_get_posts', 'my_query_filter');"
    }
  },
  
  "lifecycle_hooks": {
    "init": {
      "description": "WordPress initialization hook",
      "callback": "\\IkabudKernel\\Core\\DiSyL\\KernelIntegration::initWordPress",
      "priority": 10,
      "accepted_args": 0
    },
    "template_include": {
      "description": "Intercept WordPress template loading",
      "callback": "\\IkabudKernel\\Core\\DiSyL\\KernelIntegration::interceptTemplate",
      "priority": 999,
      "accepted_args": 1
    }
  },
  
  "render_hooks": {
    "before_render": {
      "description": "Execute before DiSyL rendering",
      "type": "filter",
      "hook": "disyl_before_render",
      "params": ["output", "context"],
      "example": "add_filter('disyl_before_render', function($output) { return $output; });"
    },
    "after_render": {
      "description": "Execute after DiSyL rendering",
      "type": "filter",
      "hook": "disyl_after_render",
      "params": ["output", "context"],
      "example": "add_filter('disyl_after_render', function($output) { return $output; });"
    },
    "component_render": {
      "description": "Execute when specific component renders",
      "type": "filter",
      "hook": "disyl_component_{component}",
      "params": ["output", "attrs", "context"],
      "example": "add_filter('disyl_component_ikb_card', function($output, $attrs) { return $output; }, 10, 2);"
    }
  },
  
  "query_hooks": {
    "before_query": {
      "description": "Modify query arguments before execution",
      "type": "filter",
      "hook": "disyl_before_query",
      "params": ["args", "component"]
    },
    "after_query": {
      "description": "Modify query results after execution",
      "type": "filter",
      "hook": "disyl_after_query",
      "params": ["results", "args", "component"]
    }
  },
  
  "cache_hooks": {
    "cache_key": {
      "description": "Modify cache key generation",
      "type": "filter",
      "hook": "disyl_cache_key",
      "params": ["key", "template", "context"]
    },
    "cache_invalidate": {
      "description": "Trigger cache invalidation",
      "type": "action",
      "hook": "disyl_cache_invalidate",
      "params": ["template", "reason"]
    }
  },
  
  "statistics": {
    "total_hooks": 35,
    "wordpress_core_actions": 15,
    "wordpress_core_filters": 10,
    "disyl_lifecycle_hooks": 2,
    "disyl_render_hooks": 3,
    "disyl_query_hooks": 2,
    "disyl_cache_hooks": 2,
    "categories": {
      "lifecycle": 4,
      "content": 8,
      "user": 4,
      "post": 5,
      "query": 3,
      "rendering": 3,
      "cache": 2,
      "ui": 6
    },
    "usage_coverage": "90%",
    "description": "Comprehensive WordPress hooks covering 90% of plugin/theme development needs"
  }
}
